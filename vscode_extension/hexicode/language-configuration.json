{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "#",
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        {"open": "if ", "close": "endif", "notIn": ["string", "comment"]},
        {"open": "fun ", "close": "endfun", "notIn": ["string", "comment"]},
        {"open": "while ", "close": "endwhile", "notIn": ["string", "comment"]},
        {"open": "for ", "close": "endfor", "notIn": ["string", "comment"]}
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["if", "endif"],
        ["fun", "endfun"],
        ["while", "endwhile"],
        ["for", "endfor"]
    ]
}